    <body>
        <a href="/showall" >Show</a><br>
        <form method="post" action="/addproduct" enctype="multipart/form-data">
            <label><b>Item Id</b></label><br>
            <input type="number" name="item_id" ><br>
            <label><b>Item Name:</b></label><br>
            <input type="text" name="item_name" ><br>
            <label><b>Shipped by</b></label><br>
            <input type="text" name="shipped_by"><br>
            <label><b>Mobile</b></label><br>
            <input type="text" name="mobileno"><br>
            <label><b>Address</b></label><br>
            <input type="text" name="address"><br>
            <label><b>To-Address</b></label><br>
            <input type="text" name="toaddress"><br>
            <label><b>Photo</b></label><br>
            <input type="file" name="photo"><br>
            <label><b>Distance</b></label><br>
            <input id="dis" type="number" name="distance"><br>
            <label><b>Weight</b></label><br>
            <input id="wei" type="number" name="weight"><br>
            <label><b>Price</b></label><br>
            <input id = "pr" type="text" name="price" value="150"><br>
            <label><b>Deliver Date</b></label><br>
            <input  type="datetime-local" name="deleiverdate" ><br>

            <input type="submit" value="Submit"> 
        </form>
        <button onClick="func()">Calculate</button>
        <script>
            function func(){
                var w=document.getElementById('wei').value;
                var d = document.getElementById('dis').value;
                document.getElementById('pr').value = 150 + 35*d+5*(w*1000);
            }
            
        </script>
    </body>
</html>